<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.timetablemanager.swapCourse"
           style="-fx-background-color: #f9f9f9;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <children>
        <VBox alignment="CENTER" spacing="20" style="-fx-pref-width: 800; -fx-pref-height: 600; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
            <Label text="Swap Classroom for a Course" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 20; -fx-text-fill: #1c1c1c;" />
            <GridPane alignment="CENTER" hgap="20" vgap="15" style="-fx-padding: 20;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150" />
                    <ColumnConstraints halignment="LEFT" minWidth="300" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="40" />
                </rowConstraints>

                <!-- Select Course -->
                <Label text="Select Course ID:" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="0" />
                <ComboBox fx:id="selectCourseCombo" promptText="Choose Course ID" GridPane.rowIndex="0" GridPane.columnIndex="1"
                          style="-fx-pref-width: 200; -fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-text-fill: #1c1c1c;" />

                <!-- Enrolled Students -->
                <Label text="Number of Enrolled Students:" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="1" />
                <ListView fx:id="enrolledListView" GridPane.rowIndex="1" GridPane.columnIndex="1"
                          style="-fx-pref-height: 30; -fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0;" />

                <!-- Course Capacity -->
                <Label text="Course Capacity:" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="2" />
                <ListView fx:id="capacityListView" GridPane.rowIndex="2" GridPane.columnIndex="1"
                          style="-fx-pref-height: 30; -fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0;" />

                <!-- Select Classroom -->
                <Label text="Select Classroom:" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="3" />
                <ComboBox fx:id="selectClassroomCombo" promptText="Choose Classroom" GridPane.rowIndex="3" GridPane.columnIndex="1"
                          style="-fx-pref-width: 200; -fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-text-fill: #1c1c1c;" />

                <!-- Classroom Capacity -->
                <Label text="Classroom Capacity:" style="-fx-font-size: 16; -fx-text-fill: #333333;" GridPane.rowIndex="4" />
                <ListView fx:id="capacityListView2" GridPane.rowIndex="4" GridPane.columnIndex="1"
                          style="-fx-pref-height: 30; -fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0;" />
            </GridPane>
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnSave" text="Save" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14;" />
                <Button fx:id="btnCancel" text="Cancel" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14;" />
            </HBox>
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnBack" text="Back" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14;" />
            </HBox>
        </VBox>
    </children>
</StackPane>
