<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.timetablemanager.studentSelectionController"
      spacing="15" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-padding: 20;">
    <Label text="Select Students" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 10 0 15 0;" />
    <TextField fx:id="searchField" promptText="Search by name or ID..."
               style="-fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-padding: 8 10;" />
    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Available Students" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <ListView fx:id="listViewAvailable" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" prefHeight="250" />
        </VBox>
        <VBox spacing="15" alignment="CENTER">
            <Button fx:id="btnAdd" text="Add &gt;&gt;" style="-fx-pref-width: 90;" />
            <Button fx:id="btnRemove" text="&lt;&lt; Remove" style="-fx-pref-width: 90;" />
        </VBox>
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Selected Students" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <ListView fx:id="listViewSelected" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" prefHeight="250" />
        </VBox>
    </HBox>
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btnSave" text="Save" style="-fx-pref-width: 90;" />
        <Button fx:id="btnCancel" text="Cancel" style="-fx-pref-width: 90;" />
    </HBox>
</VBox>
