<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.timetablemanager.welcomeController"
           style="-fx-background-color: #f9f9f9;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <alignment>CENTER</alignment>

    <VBox spacing="20" alignment="CENTER" style="-fx-pref-width: 400; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">
        <ImageView fx:id="logoImageView" fitWidth="200" preserveRatio="true" />
        <Label text="Welcome to Timetable Manager" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1c1c1c;" />
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="startBlankButton" text="Start with Blank CSV File"
                    style="-fx-background-color: #f0f0f0; -fx-border-color: #d4d4d4; -fx-border-radius: 5; -fx-text-fill: #333333; -fx-pref-width: 200;" />
            <Button fx:id="openCSVButton" text="Open Existing CSV File"
                    style="-fx-background-color: #f0f0f0; -fx-border-color: #d4d4d4; -fx-border-radius: 5; -fx-text-fill: #333333; -fx-pref-width: 200;" />
        </VBox>
    </VBox>
</StackPane>
